{
    "root": true,
    "extends": "airbnb",
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "one-var": 0,
      "class-methods-use-this": 0,
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "no-restricted-syntax":0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "comma-dangle": 0,
      "radix": 0,
      "curly": ["error", "multi-line"],
      "import/no-unresolved": [2, { "commonjs": true }],
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }]
    }
  }